<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.myTimetable" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorOnBackground</item>
        <item name="statusBarBackground">?colorOnBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>

        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/primaryDarkColor</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>
</resources>